<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="3.1" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd">

  <persistence-unit name="default">
    <class>com.github.luisfpg.State</class>
    <class>com.github.luisfpg.City</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost/eclipselink_minimal" />
      <property name="jakarta.persistence.jdbc.user" value="cyclos" />
      <property name="jakarta.persistence.jdbc.password" value="cyclos" />
      <property name="jakarta.persistence.schema-generation.database.action" value="create" />
      <property name="eclipselink.target-database" value="org.eclipse.persistence.platform.database.PostgreSQLPlatform" />
    </properties>
  </persistence-unit>
</persistence>